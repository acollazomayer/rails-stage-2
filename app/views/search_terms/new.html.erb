<div class='search-bar-container'>
  <%= form_for :search_term, url: search_terms_path do |f| %>
    <div class='form-inline'>
      <%= f.text_field :search,
        :class => 'form-control col-lg-10 mx-sm-2',
        :placeholder => 'What are you looking for?',
        :id => 'search-bar'
      %>
      <%= f.submit "Search!", :class => 'btn btn-primary', :id => 'button'%>
    </div>
  <% end %>
</div>

<div class='all-searches-container'>
  <%= link_to 'All searches...', search_terms_path, :class => 'red-class' %>
</div>

<% if @search_results %>
  <div class="cards-container">
    <% @search_results.each do |search_result| %>
      <div class="card mb-2">
        <div class="card-block">
          <h4 class="card-title mt-2 ml-2"><%= search_result['title'] %></h4>
          <h6 class="card-subtitle ml-2 mb-2 text-muted"><%= search_result['displayLink'] %></h6>
          <p class="card-text ml-2"><%= search_result['snippet'] %></p>
          <a href="#" class="card-link ml-2 mb-2"><%= search_result['link'] %></a>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class='error-container'>Nothing Found... </p>
<% end %>
